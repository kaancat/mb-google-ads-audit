{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ad Copy Audit Schema",
  "description": "Schema for Phase 5 ad copy and asset audit output",
  "type": "object",
  "required": ["audit_period", "summary", "rsa_analysis", "extension_analysis"],
  "properties": {
    "audit_period": {
      "type": "object",
      "required": ["start_date", "end_date", "days"],
      "properties": {
        "start_date": { "type": "string", "format": "date" },
        "end_date": { "type": "string", "format": "date" },
        "days": { "type": "integer", "minimum": 1 }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total_ads", "avg_headlines", "avg_descriptions"],
      "properties": {
        "total_ads": { "type": "integer", "minimum": 0 },
        "total_ad_groups": { "type": "integer", "minimum": 0 },
        "avg_headlines": {
          "type": "number",
          "minimum": 0,
          "maximum": 15,
          "description": "Average headlines per RSA"
        },
        "avg_descriptions": {
          "type": "number",
          "minimum": 0,
          "maximum": 4,
          "description": "Average descriptions per RSA"
        },
        "ads_with_poor_strength": {
          "type": "integer",
          "minimum": 0,
          "description": "RSAs with strength Poor or Average"
        },
        "extension_coverage_pct": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Percentage of campaigns with core extensions"
        }
      }
    },
    "rsa_analysis": {
      "type": "object",
      "required": ["strength_distribution", "underfilled_ads"],
      "properties": {
        "strength_distribution": {
          "type": "object",
          "properties": {
            "excellent": { "type": "integer", "minimum": 0 },
            "good": { "type": "integer", "minimum": 0 },
            "average": { "type": "integer", "minimum": 0 },
            "poor": { "type": "integer", "minimum": 0 }
          }
        },
        "headline_distribution": {
          "type": "object",
          "description": "Count of RSAs by headline count bands",
          "properties": {
            "1_4": { "type": "integer", "minimum": 0, "description": "CRITICAL: 1-4 headlines" },
            "5_9": { "type": "integer", "minimum": 0, "description": "HIGH: 5-9 headlines" },
            "10_15": { "type": "integer", "minimum": 0, "description": "GOOD: 10-15 headlines" }
          }
        },
        "description_distribution": {
          "type": "object",
          "description": "Count of RSAs by description count",
          "properties": {
            "1": { "type": "integer", "minimum": 0, "description": "CRITICAL: 1 description" },
            "2_3": { "type": "integer", "minimum": 0, "description": "HIGH: 2-3 descriptions" },
            "4": { "type": "integer", "minimum": 0, "description": "GOOD: 4 descriptions" }
          }
        },
        "underfilled_ads": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["campaign", "ad_group", "headlines_count", "descriptions_count"],
            "properties": {
              "campaign": { "type": "string" },
              "ad_group": { "type": "string" },
              "headlines_count": { "type": "integer", "minimum": 1, "maximum": 15 },
              "descriptions_count": { "type": "integer", "minimum": 1, "maximum": 4 },
              "ad_strength": { "type": "string", "enum": ["EXCELLENT", "GOOD", "AVERAGE", "POOR"] },
              "impressions": { "type": "integer", "minimum": 0 },
              "clicks": { "type": "integer", "minimum": 0 },
              "severity": { "type": "string", "enum": ["CRITICAL", "HIGH", "MEDIUM"] }
            }
          },
          "description": "RSAs with fewer than 10 headlines or 4 descriptions"
        },
        "message_diversity": {
          "type": "object",
          "properties": {
            "unique_headline_themes": { "type": "integer", "minimum": 0 },
            "duplicate_headlines_found": { "type": "boolean" },
            "assessment": {
              "type": "string",
              "enum": ["excellent", "good", "needs_improvement", "poor"]
            }
          }
        }
      }
    },
    "extension_analysis": {
      "type": "object",
      "required": ["sitelinks", "callouts", "structured_snippets"],
      "properties": {
        "sitelinks": {
          "type": "object",
          "required": ["present", "count"],
          "properties": {
            "present": { "type": "boolean" },
            "count": { "type": "integer", "minimum": 0 },
            "campaigns_missing": {
              "type": "array",
              "items": { "type": "string" }
            },
            "performance": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "text": { "type": "string" },
                  "clicks": { "type": "integer" },
                  "impressions": { "type": "integer" },
                  "ctr": { "type": "number" }
                }
              }
            }
          }
        },
        "callouts": {
          "type": "object",
          "required": ["present", "count"],
          "properties": {
            "present": { "type": "boolean" },
            "count": { "type": "integer", "minimum": 0 },
            "campaigns_missing": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "structured_snippets": {
          "type": "object",
          "required": ["present", "count"],
          "properties": {
            "present": { "type": "boolean" },
            "count": { "type": "integer", "minimum": 0 },
            "campaigns_missing": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "call_extensions": {
          "type": "object",
          "properties": {
            "present": { "type": "boolean" },
            "phone_number": { "type": "string" }
          }
        },
        "location_extensions": {
          "type": "object",
          "properties": {
            "present": { "type": "boolean" },
            "linked_accounts": { "type": "integer" }
          }
        }
      }
    },
    "landing_page_analysis": {
      "type": "object",
      "properties": {
        "total_urls": { "type": "integer", "minimum": 0 },
        "unique_urls": { "type": "integer", "minimum": 0 },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["url", "issue_type"],
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "issue_type": {
                "type": "string",
                "enum": ["404_error", "redirect", "slow_load", "no_https", "mobile_issues", "message_mismatch"]
              },
              "severity": { "type": "string", "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"] },
              "ad_group": { "type": "string" },
              "campaign": { "type": "string" }
            }
          }
        },
        "homepage_usage": {
          "type": "object",
          "properties": {
            "ads_using_homepage": { "type": "integer" },
            "total_ads": { "type": "integer" },
            "percentage": { "type": "number" },
            "assessment": {
              "type": "string",
              "enum": ["good", "acceptable", "too_high"],
              "description": "Too high = >50% of ads pointing to homepage"
            }
          }
        }
      }
    },
    "findings": {
      "type": "array",
      "items": { "$ref": "#/definitions/finding" },
      "description": "Ad copy related findings from this phase"
    }
  },
  "definitions": {
    "finding": {
      "type": "object",
      "required": ["id", "title", "severity", "category"],
      "properties": {
        "id": { "type": "string", "pattern": "^F[0-9]{3}$" },
        "title": { "type": "string" },
        "severity": { "type": "string", "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"] },
        "category": {
          "type": "string",
          "enum": ["ADS_RSA", "ADS_EXTENSIONS", "ADS_LANDING_PAGE"]
        },
        "description": { "type": "string" },
        "impact_dkk": { "type": "number" },
        "evidence": { "type": "string" },
        "recommendation": { "type": "string" }
      }
    }
  }
}
